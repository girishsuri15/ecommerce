<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title MarketPlace</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="navbar-fixed-top" >
        <div class=" navbar-inverse ">
            <div class="container">
                <div class="navbar-header">
                    @Html.ActionLink("MarketPlace", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    @Html.Action("GetCategories", "Product");
                </div>
            </div>
            </div>
            <div class="navbar-inverse ">
                <div class="container">
                    <div class="row pull-right" ">
                        @using (Html.BeginForm("SearchProducts", "Product", FormMethod.Get, new { @class = "search-wrap" }))
                        {
                            <div class="form-group">
                                <div class="col-md-6"><input type="search" class="form-control search" placeholder="Search" name="SearchString"></div>
                                <div class="col-md-2"><button class="btn btn-primary submit-search text-center " type="submit">Search</button></div>
                            </div>
                        }
                    </div>
                    <ul class="pull-left nav navbar-nav">

                        @if (Session["userId"] == null)
                        {
                            <li> <a href="@Url.Action("Login", "Login")">Login</a></li>
                            <li><a href="@Url.Action("Index", "Register")">SignUp</a></li>
                        }
                        else
                        {
                            <li> <a href="@Url.Action("GetCart", "Cart")">Cart</a></li>
                            <li><a href="@Url.Action("GetOrder", "Order")">MyOrder</a></li>
                            <li><a href="@Url.Action("SignOut", "Login")">SignOut</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
                    <div class="container body-content " style="margin-top:70px;">
                        <div class="" >
                            @RenderBody()
                            <hr />
                        </div>
                        <footer></footer>
                    </div>
                </div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @Scripts.Render("custom.css")
                @RenderSection("scripts", required: false)

</body>
</html>
